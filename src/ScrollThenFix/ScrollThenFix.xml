<?xml version="1.0" encoding="utf-8" ?>
<widget id="ScrollThenFix.widget.ScrollThenFix" needsEntityContext="false" xmlns="http://www.mendix.com/widget/1.0/">
  <name>ScrollThenFix</name>
  <description>The description of this widget.</description>

  <icon></icon>

  <properties>
        <property key="wrapClass" type="string" required="true" defaultValue=".mx-layoutcontainer-center .mx-layoutcontainer-wrapper">
            <caption>Wrap Class</caption>
            <category>Behavior</category>
            <description>The main scrolling region.</description>
        </property>
        <property key="toggledClass" type="string" required="true" defaultValue="affix-top">
            <caption>Toggled Class</caption>
            <category>Behavior</category>
            <description>The toggled class to use</description>
        </property>
        <property key="offsetFromTop" type="integer" required="true" defaultValue="100">
            <caption>Offset from Top</caption>
            <category>Behavior</category>
            <description>The offset, in px, from the top to affix the class.</description>
        </property>
	</properties>
</widget>

